<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TableLayout
        android:id="@+id/databaseStatsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/databaseInputLayout">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/games"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/settings_gamesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:fontFamily="@font/josefin_sans"
                android:textSize="20sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/players"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/settings_playersTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefin_sans"

                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/tosses"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/settings_tossesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefin_sans"
                android:text=""
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/created"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/settings_createdTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefin_sans"
                android:textSize="20sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/updated"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/settings_updatedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/josefin_sans"
                android:text=""
                android:textSize="20sp" />
        </TableRow>


    </TableLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/imageSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="@string/show_images"
        app:layout_constraintEnd_toEndOf="@+id/useCloudSwitch"
        app:layout_constraintStart_toStartOf="@+id/useCloudSwitch"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/useCloudSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="@string/use_cloud_database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSwitch" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/databaseInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/databaseInputLayout"
        app:layout_constraintTop_toTopOf="@+id/databaseInputLayout"
        app:srcCompat="@drawable/info_button" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/databaseInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="6"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/undo"
        app:startIconTint="@color/teal"
        app:endIconDrawable="@drawable/checkmark"
        app:errorIconDrawable="@drawable/error"
        app:errorIconTint="@color/chestnut"
        app:endIconTint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="@+id/useCloudSwitch"
        app:layout_constraintStart_toStartOf="@+id/useCloudSwitch"
        app:layout_constraintTop_toBottomOf="@+id/useCloudSwitch">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDBID"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:maxLength="6"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnm"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>